{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "builds": [
    {
      "src": "client/**",
      "use": "@vercel/astro",
      "config": {
        "ssr": true,
        "environment": "production"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/client/$1",
      "status": 200,
      "headers": {
        "Content-Type": "text/html; charset=UTF-8"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
